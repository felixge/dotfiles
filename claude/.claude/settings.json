{
  "permissions": {
    "allow": [
      "Skill(jj)",
      "Skill(conventional-commits)",
      "Bash(jj *)",
      "Bash(bzl run //:gazelle *)",
      "Bash(bzl build *)",
      "Bash(bzl test *)",
      "Bash(bzl query *)",
      "Bash(go test *)",
      "Bash(tee *)",
      "Bash(go build *)",
      "Bash(find *)",
      "Bash(go get *)",
      "Bash(go mod *)",
      "Read(*)",
      "mcp__datadog__*"
    ],
    "deny": [
      "Bash(jj git *)",
      "Bash(git *)",
      "Read(.envrc)",
      "Read(~/.aws/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"curl -d \" + (.message | @sh) + \" -H \" + (\"Title: Claude Code (\" + (.cwd | split(\"/\") | last) + \")\" | @sh) + \" http://localhost:7878\"' | sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": false,
    "gopls-lsp@claude-plugins-official": true,
    "dd@datadog-claude-plugins": true,
    "atlassian-remote-mcp@datadog-claude-plugins": true,
    "go-code-reviewer@datadog-claude-plugins": true,
    "clangd-lsp@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "agent-browser@agent-browser": true
  },
  "extraKnownMarketplaces": {
    "datadog-claude-plugins": {
      "source": {
        "source": "github",
        "repo": "DataDog/claude-marketplace"
      }
    }
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "docker:*",
      "jj:*"
    ]
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bash /home/bits/.claude/statusline-command.sh"
  }
}
