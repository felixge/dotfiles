{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"curl -d \" + (.message | @sh) + \" -H \" + (\"Title: Claude Code (\" + (.cwd | split(\"/\") | last) + \")\" | @sh) + \" http://localhost:7878\"' | sh"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker:*", "jj:*"],
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    }
  },
  "permissions": {
    "allow": [
      "Skill(*)",
      "Bash(jj:*)"
    ],
    "deny": [
      "Bash(jj git:*)",
      "Read(.envrc)",
      "Read(~/.aws/**)",
      "Bash(jj git:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": false,
    "gopls-lsp@claude-plugins-official": true,
    "dd@datadog-claude-plugins": true,
    "atlassian-remote-mcp@datadog-claude-plugins": true,
    "go-code-reviewer@datadog-claude-plugins": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "extraKnownMarketplaces": {
    "datadog-claude-plugins": {
      "source": {
        "source": "github",
        "repo": "DataDog/claude-marketplace"
      }
    }
  }
}
